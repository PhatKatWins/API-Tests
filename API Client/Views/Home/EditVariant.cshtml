@model API_Service.Models.Variant
@{
    ViewData["Title"] = "EditVariant";
}
    <div class="text-center">
        @if (Model == null)
        {
            <h2 class="font-weight-bold">The damn thing seems to have dissapeared!</h2>
        }
        else
        {
            @if (ViewBag.IsNew)
            {
                <h5>You are adding a new variant for:</h5>
                <h1>@ViewBag.PhraseText</h1>;
                <hr />
                <div class="row justify-content-center">
                    <div class="col-7">
                        <form asp-action="SaveNewVariant" asp-route-phraseId="@Model.PhraseId">
                            <div class="form-group input-group-lg">
                                <label for="language">Language</label>
                                <input class="input-group-lg" type="text" name="language" placeholder="@Model.Language" />
                            </div>
                            <div class="form-group">
                                <label class="align-top" for="text">Translation</label>
                                <textarea type="text" name="text" placeholder="@Model.Text"></textarea>
                            </div>
                            <button type="submit">Save!</button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <h5>You are editing the @Model.Language variant for:</h5>
                <h1>@ViewBag.PhraseText</h1>
                <hr />
                <div class="row justify-content-center">
                    <div class="col-7">
                        <form asp-action="UpdateVariant" asp-route-id="@Model.Id" asp-route-phraseId="@Model.PhraseId">
                            <div class="form-group input-group-lg">
                                <label for="language">Language</label>
                                <input class="input-group-lg" type="text" name="language" value="@Model.Language" />
                            </div>
                            <div class="form-group">
                                <label class="align-top" for="text">Translation</label>
                                <textarea type="text" name="text">@Model.Text</textarea>
                            </div>
                            <button type="submit">Save!</button>
                        </form>
                    </div>
                </div>
            }
        }
    </div>

